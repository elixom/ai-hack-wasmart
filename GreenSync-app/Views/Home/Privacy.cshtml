@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="text-success mb-4">
                <i class="bi bi-shield-check"></i> Privacy Policy
            </h1>
            <p class="lead text-muted">Last updated: October 18, 2025</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="text-success mb-4">GreenSync Privacy Policy</h3>
                    
                    <section class="mb-5">
                        <h4 class="text-primary"><i class="bi bi-info-circle"></i> Overview</h4>
                        <p class="text-muted">
                            GreenSync is committed to protecting your privacy and ensuring the security of your personal information. 
                            This Privacy Policy explains how we collect, use, disclose, and safeguard your information when you use 
                            our AI-powered smart waste management platform.
                        </p>
                    </section>

                    <section class="mb-5">
                        <h4 class="text-primary"><i class="bi bi-collection"></i> Information We Collect</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="text-success">Personal Information</h5>
                                <ul class="text-muted">
                                    <li>Name and contact details</li>
                                    <li>Account credentials</li>
                                    <li>Profile information</li>
                                    <li>Communication preferences</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-success">Operational Data</h5>
                                <ul class="text-muted">
                                    <li>Waste report locations and details</li>
                                    <li>Route optimization data</li>
                                    <li>Eco-credit transactions</li>
                                    <li>System usage analytics</li>
                                </ul>
                            </div>
                        </div>
                    </section>

                    <section class="mb-5">
                        <h4 class="text-primary"><i class="bi bi-gear"></i> How We Use Your Information</h4>
                        <div class="alert alert-info">
                            <strong><i class="bi bi-lightbulb"></i> Municipal Services Enhancement</strong>
                            <p class="mb-0 mt-2">We use your information to optimize waste collection routes, predict waste hotspots, 
                            manage eco-credit rewards, and improve overall municipal waste management efficiency.</p>
                        </div>
                        <ul class="text-muted">
                            <li>Process and respond to waste reports</li>
                            <li>Optimize collection routes using AI algorithms</li>
                            <li>Calculate and distribute eco-credits</li>
                            <li>Provide system analytics and insights</li>
                            <li>Communicate service updates and notifications</li>
                            <li>Ensure platform security and prevent fraud</li>
                        </ul>
                    </section>

                    <section class="mb-5">
                        <h4 class="text-primary"><i class="bi bi-share"></i> Information Sharing</h4>
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-warning">
                                    <strong><i class="bi bi-shield-lock"></i> Limited Sharing Policy</strong>
                                    <p class="mb-0 mt-2">We do not sell, trade, or rent your personal information to third parties. 
                                    Information is only shared as necessary for municipal operations or as required by law.</p>
                                </div>
                                <h5 class="text-success mt-3">We may share information with:</h5>
                                <ul class="text-muted">
                                    <li>Municipal waste collection departments</li>
                                    <li>Fleet management contractors</li>
                                    <li>Environmental regulatory agencies (when required)</li>
                                    <li>Technology service providers (with strict confidentiality agreements)</li>
                                </ul>
                            </div>
                        </div>
                    </section>

                    <section class="mb-5">
                        <h4 class="text-primary"><i class="bi bi-lock"></i> Data Security</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="text-success">Technical Safeguards</h5>
                                <ul class="text-muted">
                                    <li>End-to-end encryption</li>
                                    <li>Secure cloud infrastructure</li>
                                    <li>Regular security audits</li>
                                    <li>Access control systems</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-success">Administrative Controls</h5>
                                <ul class="text-muted">
                                    <li>Employee background checks</li>
                                    <li>Privacy training programs</li>
                                    <li>Incident response procedures</li>
                                    <li>Data retention policies</li>
                                </ul>
                            </div>
                        </div>
                    </section>

                    <section class="mb-5">
                        <h4 class="text-primary"><i class="bi bi-person-check"></i> Your Rights</h4>
                        <div class="alert alert-success">
                            <strong><i class="bi bi-hand-thumbs-up"></i> You Have Control</strong>
                            <p class="mb-0 mt-2">You have the right to access, correct, delete, or port your personal data. 
                            Contact our privacy team to exercise these rights.</p>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="text-muted">
                                    <li>Access your personal data</li>
                                    <li>Correct inaccurate information</li>
                                    <li>Request data deletion</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="text-muted">
                                    <li>Data portability requests</li>
                                    <li>Opt-out of communications</li>
                                    <li>Withdraw consent (where applicable)</li>
                                </ul>
                            </div>
                        </div>
                    </section>

                    <section class="mb-5">
                        <h4 class="text-primary"><i class="bi bi-clock"></i> Data Retention</h4>
                        <p class="text-muted">
                            We retain your information only as long as necessary to fulfill the purposes outlined in this policy, 
                            comply with legal obligations, and resolve disputes. Waste report data is typically retained for 
                            7 years for environmental compliance, while account information is kept for the duration of active use.
                        </p>
                    </section>

                    <section class="mb-4">
                        <h4 class="text-primary"><i class="bi bi-telephone"></i> Contact Information</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="text-success">Privacy Officer</h6>
                                        <p class="text-muted mb-1"><i class="bi bi-envelope"></i> privacy@greensync.org</p>
                                        <p class="text-muted mb-1"><i class="bi bi-phone"></i> 1-800-GREENSYNC</p>
                                        <p class="text-muted mb-0"><i class="bi bi-geo-alt"></i> 123 Municipal Plaza, Suite 400</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="text-success">Data Protection Officer</h6>
                                        <p class="text-muted mb-1"><i class="bi bi-envelope"></i> dpo@greensync.org</p>
                                        <p class="text-muted mb-1"><i class="bi bi-phone"></i> 1-800-DATA-PROTECT</p>
                                        <p class="text-muted mb-0"><i class="bi bi-clock"></i> Mon-Fri 8AM-6PM EST</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-shield-check"></i> Privacy Commitment</h5>
                    <p class="card-text">
                        Your privacy is fundamental to our mission of creating sustainable, smart cities. 
                        We use the minimum data necessary to provide excellent waste management services.
                    </p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h6 class="text-success"><i class="bi bi-bell"></i> Policy Updates</h6>
                    <p class="text-muted small">
                        We will notify you of any material changes to this Privacy Policy through 
                        in-app notifications and email updates.
                    </p>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h6 class="text-success"><i class="bi bi-download"></i> Quick Links</h6>
                    <div class="d-grid gap-2"> 
                        <button class="btn btn-outline-success btn-sm" onclick="window.print()">
                            <i class="bi bi-printer"></i> Print Policy
                        </button> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .alert {
        border-left: 4px solid;
    }
    
    .alert-info {
        border-left-color: #0dcaf0;
    }
    
    .alert-warning {
        border-left-color: #ffc107;
    }
    
    .alert-success {
        border-left-color: #198754;
    }
</style>
