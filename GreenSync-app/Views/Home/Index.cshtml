@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-success fw-bold mb-0">Welcome back, @Model.User.FullName!</h2>
                    <p class="text-muted">Here's your waste management overview</p>
                </div>
                <div>
                    <a href="@Url.Action("Create", "Reports")" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Report Waste
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="fw-bold">@Model.TotalReports</h4>
                            <p class="mb-0">Total Reports</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-file-earmark-text fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="fw-bold">@Model.PendingReports</h4>
                            <p class="mb-0">Pending Collection</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-clock fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="fw-bold">@Model.CollectedReports</h4>
                            <p class="mb-0">Collected</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-check-circle fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="fw-bold">@(Model.EcoCredit?.CurrentBalance ?? 0)</h4>
                            <p class="mb-0">Eco-Credits</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-coin fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Azure Maps Container -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-map text-success"></i> Waste Report Locations
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div id="wasteReportsMap" style="height: 450px;"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Reports -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Recent Reports</h5>
                    <a href="@Url.Action("Index", "Reports")" class="btn btn-outline-primary btn-sm">View All</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentReports.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th>Type</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var report in Model.RecentReports)
                                    {
                                        <tr>
                                            <td>@report.Location</td>
                                            <td>
                                                @switch (report.Status)
                                                {
                                                    case GreenSync.Lib.Models.ReportStatus.Reported:
                                                        <span class="badge bg-warning">Reported</span>
                                                        break;
                                                    case GreenSync.Lib.Models.ReportStatus.Assigned:
                                                        <span class="badge bg-info">Assigned</span>
                                                        break;
                                                    case GreenSync.Lib.Models.ReportStatus.InProgress:
                                                        <span class="badge bg-primary">In Progress</span>
                                                        break;
                                                    case GreenSync.Lib.Models.ReportStatus.Collected:
                                                        <span class="badge bg-success">Collected</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@report.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@report.WasteType</td>
                                            <td>@report.Timestamp.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("Details", "Reports", new { id = report.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-4 text-muted"></i>
                            <p class="text-muted mt-2">No reports yet. Submit your first waste report!</p>
                            <a href="@Url.Action("Create", "Reports")" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Create Report
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Alerts & Eco-Credits -->
        <div class="col-lg-4">
            <!-- Proactive Alerts -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-bell text-warning"></i> Recent Alerts
                    </h5>
                </div>
                <div class="card-body">
                    @foreach (var alert in Model.RecentAlerts)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <small>@alert</small>
                            <button type="button" class="btn-close btn-close-sm" data-bs-dismiss="alert"></button>
                        </div>
                    }
                </div>
            </div>

            <!-- Eco-Credits Summary -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-coin text-success"></i> Eco-Credits
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.EcoCredit != null)
                    {
                        <div class="text-center mb-3">
                            <h2 class="text-success fw-bold">@Model.EcoCredit.CurrentBalance</h2>
                            <p class="text-muted">Current Balance</p>
                        </div>
                        
                        <div class="row text-center">
                            <div class="col-6">
                                <h6 class="fw-bold">@Model.EcoCredit.TotalEarned</h6>
                                <small class="text-muted">Total Earned</small>
                            </div>
                            <div class="col-6">
                                <h6 class="fw-bold">@Model.EcoCredit.TotalRedeemed</h6>
                                <small class="text-muted">Total Redeemed</small>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <a href="@Url.Action("Index", "EcoCredits")" class="btn btn-outline-success">
                                View Details
                            </a>
                            <a href="@Url.Action("Redeem", "EcoCredits")" class="btn btn-success">
                                Redeem Credits
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <p class="text-muted">Start reporting waste to earn Eco-Credits!</p>
                            <a href="@Url.Action("Create", "Reports")" class="btn btn-success">
                                Get Started
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Azure Maps Web SDK -->
    <link rel="stylesheet" href="https://atlas.microsoft.com/sdk/javascript/mapcontrol/3/atlas.min.css" type="text/css" />
    <script src="https://atlas.microsoft.com/sdk/javascript/mapcontrol/3/atlas.min.js"></script>
    
    <!-- Map initialization script -->
    <script>
        window.azureMapsConfig = {
            clientId: '@Model.AzureMapsClientId',
            reports: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.RecentReports.Select(r => new {
                id = r.Id,
                location = r.Location,
                latitude = r.Latitude,
                longitude = r.Longitude,
                status = r.Status.ToString(),
                wasteType = r.WasteType,
                timestamp = r.Timestamp.ToString("MMM dd, yyyy")
            })))
        };
    </script>
    <script src="~/js/map.js"></script>
}
