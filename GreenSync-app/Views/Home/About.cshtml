@{
    ViewData["Title"] = "About Us - GreenSync";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/landing.css" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-success" href="@Url.Action("Landing", "Home")">
                <i class="bi bi-recycle"></i> GreenSync
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Landing", "Home")#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Landing", "Home")#how-it-works">How It Works</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Landing", "Home")#impact">Impact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("About", "Home")">About Us</a>
                    </li>
                    <li class="nav-item ms-3">
                        <a class="btn btn-outline-success" href="@Url.Action("Login", "Auth")">Sign In</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h1 class="display-3 fw-bold mb-4">Meet the <span class="text-success">GreenSync</span> Team</h1>
                    <p class="lead text-muted mb-5">
                        A passionate group of innovators dedicated to revolutionizing waste management through technology and sustainability.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Team Section -->
    <section class="py-5">
        <div class="container">
            <div class="row g-4">
                <!-- Khamali Powell -->
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card text-center h-100">
                        <div class="feature-icon bg-primary mb-3 mx-auto" style="width: 100px; height: 100px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                            <i class="bi bi-shield-lock display-4"></i>
                        </div>
                        <h3 class="h4 fw-bold mb-2">Khamali Powell</h3>
                        <p class="text-success fw-semibold mb-3">Programmer & Junior Computer Security Analyst</p>
                        <p class="text-muted">
                            Bringing fresh perspectives to security and development. Starting out in the field with enthusiasm for building secure, innovative solutions.
                        </p>
                    </div>
                </div>

                <!-- Shane Edwards -->
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card text-center h-100">
                        <div class="feature-icon bg-success mb-3 mx-auto" style="width: 100px; height: 100px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                            <i class="bi bi-code-slash display-4"></i>
                        </div>
                        <h3 class="h4 fw-bold mb-2">Shane Edwards</h3>
                        <p class="text-success fw-semibold mb-3">Passionate Developer</p>
                        <p class="text-muted">
                            Lives and breathes code. Programming isn't just a career—it's a way of life. Committed to excellence in every line of code.
                        </p>
                    </div>
                </div>

                <!-- Hushane Esson -->
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card text-center h-100">
                        <div class="feature-icon bg-warning mb-3 mx-auto" style="width: 100px; height: 100px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                            <i class="bi bi-emoji-sunglasses display-4"></i>
                        </div>
                        <h3 class="h4 fw-bold mb-2">Hushane Esson</h3>
                        <p class="text-success fw-semibold mb-3">Developer Emeritus</p>
                        <p class="text-muted">
                            Done with the programming life, but still delivering results. No feedback surveys please—you've been warned!
                        </p>
                    </div>
                </div>

                <!-- Vance Tyndale -->
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card text-center h-100">
                        <div class="feature-icon bg-info mb-3 mx-auto" style="width: 100px; height: 100px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                            <i class="bi bi-diagram-3 display-4"></i>
                        </div>
                        <h3 class="h4 fw-bold mb-2">Vance Tyndale</h3>
                        <p class="text-success fw-semibold mb-3">Full Stack Project Manager</p>
                        <p class="text-muted">
                            We don't know what that means, but we love him anyway! Keeps the team organized and projects moving forward.
                        </p>
                    </div>
                </div>

                <!-- Michael Gordon -->
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card text-center h-100">
                        <div class="feature-icon bg-danger mb-3 mx-auto" style="width: 100px; height: 100px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                            <i class="bi bi-file-text display-4"></i>
                        </div>
                        <h3 class="h4 fw-bold mb-2">Michael Gordon</h3>
                        <p class="text-success fw-semibold mb-3">Master Documenter</p>
                        <p class="text-muted">
                            The greatest documenter to have ever lived. How he does it without being present is pure magic. Documentation excellence personified.
                        </p>
                    </div>
                </div>

                <!-- Armani Dyer -->
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card text-center h-100">
                        <div class="feature-icon bg-dark mb-3 mx-auto" style="width: 100px; height: 100px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                            <i class="bi bi-lightning-charge display-4"></i>
                        </div>
                        <h3 class="h4 fw-bold mb-2">Armani Dyer</h3>
                        <p class="text-success fw-semibold mb-3">Electrical Power Engineering Student</p>
                        <p class="text-muted">
                            UWI Mona student with a passion for robotics and automation. Bringing electrical engineering expertise to sustainable technology solutions.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Mission Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="display-5 fw-bold mb-4">Our Mission</h2>
                    <p class="lead text-muted mb-4">
                        We're dedicated to transforming waste management through innovative technology, making cities cleaner, 
                        greener, and more sustainable for future generations. Our diverse team brings together expertise in 
                        software development, security, engineering, and project management to create solutions that matter.
                    </p>
                    <a href="@Url.Action("Landing", "Home")" class="btn btn-success btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5 class="fw-bold text-success mb-3">
                        <i class="bi bi-recycle"></i> GreenSync
                    </h5>
                    <p class="text-muted">
                        AI-Powered Smart Waste & Resource Management Platform for a sustainable future.
                    </p>
                </div>
                <div class="col-lg-2 mb-4">
                    <h6 class="fw-bold mb-3">Platform</h6>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Landing", "Home")#features">Features</a></li>
                        <li><a href="@Url.Action("Landing", "Home")#how-it-works">How It Works</a></li>
                        <li><a href="@Url.Action("Landing", "Home")#impact">Impact</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 mb-4">
                    <h6 class="fw-bold mb-3">Company</h6>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("About", "Home")">About Us</a></li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Careers</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 mb-4">
                    <h6 class="fw-bold mb-3">Resources</h6>
                    <ul class="list-unstyled">
                        <li><a href="#">Documentation</a></li>
                        <li><a href="#">Support</a></li>
                        <li><a href="#">API</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 mb-4">
                    <h6 class="fw-bold mb-3">Legal</h6>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Privacy", "Home")">Privacy</a></li>
                        <li><a href="#">Terms</a></li>
                        <li><a href="#">Security</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-lg-12 text-center text-muted">
                    <p>&copy; 2025 GreenSync. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
