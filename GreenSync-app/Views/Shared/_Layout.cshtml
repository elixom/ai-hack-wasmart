<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GreenSync</title>
    <script type="importmap"></script>
    <link rel="icon" type="image/png" href="favicon.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GreenSync_app.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-recycle"></i> GreenSync
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-file-earmark-text"></i> Reports
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="Create">
                                    <i class="bi bi-plus-circle"></i> Create Report
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index">
                                    <i class="bi bi-list-ul"></i> My Reports
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="Track">
                                    <i class="bi bi-geo-alt"></i> Track Reports
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-coin"></i> Eco-Credits
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="EcoCredits" asp-action="Index">
                                    <i class="bi bi-wallet2"></i> My Balance
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="EcoCredits" asp-action="History">
                                    <i class="bi bi-clock-history"></i> Transaction History
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="EcoCredits" asp-action="Redeem">
                                    <i class="bi bi-gift"></i> Redeem Credits
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> Account
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><h6 class="dropdown-header">Welcome!</h6></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                    <i class="bi bi-person"></i> My Profile
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="Edit">
                                    <i class="bi bi-pencil"></i> Edit Profile
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="ChangePassword">
                                    <i class="bi bi-key"></i> Change Password
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Success/Error/Info/Warning Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="container-fluid">
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="container-fluid">
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="container-fluid">
            <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="container-fluid">
            <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-info-circle-fill"></i> @TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    <main role="main" class="pb-3 pt-3">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-success"><i class="bi bi-recycle"></i> GreenSync</h5>
                    <p class="text-muted">Smart Waste & Resource Management Platform</p>
                </div>
                <div class="col-md-6">
                    <h6>Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Create", "Reports")" class="text-light text-decoration-none">Report Waste</a></li>
                        <li><a href="@Url.Action("Index", "EcoCredits")" class="text-light text-decoration-none">Eco-Credits</a></li>
                        <li><a href="@Url.Action("Privacy", "Home")" class="text-light text-decoration-none">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
            <hr class="text-muted">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="text-muted mb-0">&copy; 2025 GreenSync - AI-Powered Smart Waste Management</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
