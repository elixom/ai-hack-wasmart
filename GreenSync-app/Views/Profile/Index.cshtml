@model ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container">
    <div class="row">
        <!-- Profile Header -->
        <div class="col-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center mx-auto" 
                                 style="width: 100px; height: 100px; font-size: 2.5rem;">
                                @Model.User.FullName.Substring(0, 1).ToUpper()
                            </div>
                        </div>
                        <div class="col-md-7">
                            <h2 class="fw-bold mb-1">@Model.User.FullName</h2>
                            <p class="text-muted mb-2">
                                <i class="bi bi-envelope"></i> @Model.User.Email
                            </p>
                            <p class="text-muted mb-0">
                                <i class="bi bi-person-badge"></i> @Model.User.Username
                            </p>
                            <small class="text-muted">
                                <i class="bi bi-calendar"></i> Member since @Model.MemberSince.ToString("MMMM yyyy")
                            </small>
                        </div>
                        <div class="col-md-3 text-md-end mt-3 mt-md-0">
                            <a href="@Url.Action("Edit", "Profile")" class="btn btn-warning mb-2 w-100">
                                <i class="bi bi-pencil"></i> Edit Profile
                            </a>
                            <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-key"></i> Change Password
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-file-earmark-text text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 fw-bold text-primary">@Model.TotalReports</h3>
                    <p class="text-muted mb-0">Total Reports</p>
                    <a href="@Url.Action("Index", "Reports")" class="btn btn-sm btn-outline-primary mt-2">
                        View Reports
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-success">
                <div class="card-body text-center">
                    <i class="bi bi-coin text-success" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 fw-bold text-success">@Model.EcoCreditsBalance</h3>
                    <p class="text-muted mb-0">Eco-Credits</p>
                    <a href="@Url.Action("Index", "EcoCredits")" class="btn btn-sm btn-outline-success mt-2">
                        View Credits
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-info">
                <div class="card-body text-center">
                    <i class="bi bi-shield-check text-info" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 fw-bold text-info">@Model.User.Role</h3>
                    <p class="text-muted mb-0">Account Type</p>
                </div>
            </div>
        </div>

        <!-- Account Information -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-circle"></i> Account Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-5">
                            <strong class="text-muted">Full Name:</strong>
                        </div>
                        <div class="col-7">
                            @Model.User.FullName
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-5">
                            <strong class="text-muted">Username:</strong>
                        </div>
                        <div class="col-7">
                            @Model.User.Username
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-5">
                            <strong class="text-muted">Email:</strong>
                        </div>
                        <div class="col-7">
                            @Model.User.Email
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-5">
                            <strong class="text-muted">Role:</strong>
                        </div>
                        <div class="col-7">
                            <span class="badge bg-info">@Model.User.Role</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-5">
                            <strong class="text-muted">Member Since:</strong>
                        </div>
                        <div class="col-7">
                            @Model.MemberSince.ToString("MMMM dd, yyyy")
                        </div>
                    </div>
                    @if (Model.User.LastLoginAt.HasValue)
                    {
                        <div class="row">
                            <div class="col-5">
                                <strong class="text-muted">Last Login:</strong>
                            </div>
                            <div class="col-7">
                                @Model.User.LastLoginAt.Value.ToString("MMMM dd, yyyy hh:mm tt")
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-lightning"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Create", "Reports")" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Report New Waste
                        </a>
                        <a href="@Url.Action("Index", "Reports")" class="btn btn-outline-primary">
                            <i class="bi bi-file-earmark-text"></i> View My Reports
                        </a>
                        <a href="@Url.Action("Index", "EcoCredits")" class="btn btn-outline-success">
                            <i class="bi bi-coin"></i> Manage Eco-Credits
                        </a>
                        <a href="@Url.Action("Edit", "Profile")" class="btn btn-outline-warning">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                        <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-outline-secondary">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Impact Summary -->
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-globe"></i> Your Environmental Impact
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <div class="p-3">
                                <i class="bi bi-trash text-success" style="font-size: 2.5rem;"></i>
                                <h4 class="mt-2 fw-bold">@Model.TotalReports</h4>
                                <p class="text-muted mb-0">Waste Reports Submitted</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="p-3">
                                <i class="bi bi-tree text-success" style="font-size: 2.5rem;"></i>
                                <h4 class="mt-2 fw-bold">@Model.EcoCreditsBalance</h4>
                                <p class="text-muted mb-0">Eco-Credits Earned</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="p-3">
                                <i class="bi bi-heart text-success" style="font-size: 2.5rem;"></i>
                                <h4 class="mt-2 fw-bold">Active</h4>
                                <p class="text-muted mb-0">Community Member</p>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-success mt-3 mb-0" role="alert">
                        <i class="bi bi-check-circle"></i>
                        <strong>Great work!</strong> You're making a positive impact on the environment. Keep reporting waste to earn more Eco-Credits!
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
