@model EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Profile")">Profile</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Edit Profile</li>
                    </ol>
                </nav>
                <h2 class="text-success fw-bold">
                    <i class="bi bi-pencil-square"></i> Edit Profile
                </h2>
                <p class="text-muted">Update your personal information</p>
            </div>

            <!-- Edit Form -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-circle"></i> Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">
                                Full Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter your full name" required />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">
                                Email Address <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                            <small class="text-muted">We'll send important notifications to this email address</small>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle"></i>
                            <strong>Note:</strong> This is currently a demo. In production, these changes would be saved to the database.
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <a href="@Url.Action("Index", "Profile")" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Additional Information -->
            <div class="mt-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title fw-bold">
                            <i class="bi bi-shield-lock"></i> Privacy & Security
                        </h6>
                        <p class="card-text small text-muted mb-2">
                            Your personal information is secure and will never be shared with third parties without your consent.
                        </p>
                        <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
